<div class="BigTitle">
    <h2>所有候選議題</h2>
    <hr>
</div>
<div align = "center" class = "whiteText">
	<div class = "col-md-offset-2 col-md-8 ">
		<table class = "table table-bordered">
			<thead>
				<tr align = "center">
					<td colspan = "4">All the Candidate Issue</td>
				</tr>
				<tr><td>Title</td><td>count</td><td>love one</td><td>Upgread</td></tr>
			</thead>
			<tbody>
				<% @issues.each do |issue| %>
					<tr>
						<td>
								<%= issue.title %>
						</td>
						<td><%= issue.thumb_up.split(',').length %></td>
						<td>
							<% if issue.thumb_up.include?(current_user.id.to_s)%>
								You have already love me...
							<% else %>
								<% link = issuelist_thumb_up_path + "?id=" + issue.id.to_s %>
								<%= link_to "love me pls",link,method: :post%>
							<% end %>
							
						</td>
						<td>
							<% if true%>
								<% link = issuelist_upgrade_path + "?id=" + issue.id.to_s %>
								<%= link_to "upgrade",link,method: :post%>
							<% else %>
								限管理員使用
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>