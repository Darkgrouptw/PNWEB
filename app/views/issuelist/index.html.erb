					<% str_show = "只顯示直接意見" %>
					<% if @neg_show == "table" %>
						<% temp = "content" %>
						<% str_show = "只顯示直接意見" %>
					<% else %>
						<% temp = "table" %>
						<% str_show = "顯示全部意見" %>
					<% end %>
					<% link  = getSelfLink(@positive_page.to_s,@negative_page.to_s,@pos_order,@neg_order,@pos_show,temp)%><a href = <%= link %> class = "btn"><%= str_show%></a>
					<a href = <%= getSelfLink(@positive_page.to_s,@negative_page.to_s,@pos_order,"thumb",@pos_show,@neg_show) %> class = "btn">依投票排序</a>
					<a href = <%= getSelfLink(@positive_page.to_s,@negative_page.to_s,@pos_order,"time",@pos_show,@neg_show) %> class = "btn">依時間排序</a>
				<% end %>
				
				<div <% if i == 0 %> id = "posTable" <% else %> id = "negTable" <% end %>>
					<table class = "table table-bordered table-blue">
						<thead>
							<% if i == 0 %>
								<tr align = "center"><td class = "col-md-8" colspan = "9">贊成論述</td></tr>
							<% else %>
								<tr align = "center"><td class = "col-md-8" colspan = "9">反對論述 </td></tr>
							<% end %>
							<tr>
								<td>意見</td>
								<td><div>誰的意見</div><div>當時頭銜</div></td>
								<td>屬於間接意見？</td>
								<td><div>發言時間</div><div>刊載媒體</div></td>
								<td><div>原文連結</div><div>原文備份</div></td>
								<td>人氣</td>
								<td><div>上線時間</div><div>編者</div></td>
								<td>檢舉</td>
							</tr>
							<% details = nil %>
							<% pageNumber = 0 %>
							<% if i == 0 %>
								<% details = @support %>
								<% pageNumber = @positive_page %>
							<% else %>
								<% details = @disSupport %>
								<% pageNumber = @negative_page %>
							<% end %>
							
						</thead>
						<tbody>
							<% for j in 0..@numberPerPage - 1 %>
								<% index = @numberPerPage * pageNumber.to_i + j %>
								<% if details.length > index %>
									<% detail = details[index] %> 
									<% person = @persons.where(id: detail.people_id)[0] %>
									<% user = @users.where(id: detail.post_id)[0] %>
									<% media = @medias.where(name: detail.news_media)[0] %>
									<!-- content -->
									<tr>
										<td>
											<% link = detaillist_index_path(id: detail.id) %>
											<a href = <%= link %>><%= detail.content %></a>
										</td>
										<td><div><% if person.nil? %>無名氏<% else %><% link = peoplelist_index_path(id: person.name) %><a href = <%= link %>> <%= person.name %> </a><% end %></div><div><%= detail.	title_at_that_time %></div></td>
										<td><% if detail.is_direct %>直<% else %>間<% end %></td>
										<td>
											<div><%= detail.report_at %></div>
											<% link = media_index_path(id: media.name) %>
											<div>
												<a href=<%= link %>>
													<%= media.name %>	
												</a>
											</div>
										</td>
										<td>
											<div><% link = detail.link %><a href = <%= "//" + link %> target="_blank">原文連結</a></div>
											<div>
												<% link = "pageBackUp/"+detail.backup_id.to_s+"."+detail.backup_type %>
            	                    			<% if FileIsExit(link) %>
            	                    			    <a href = <%= "/"+link %> target="_blank">
            	                    			      備份檔案
            	                    			    </a>
            	                    			<% else %>
            	                    			    <br>
            	                    			<% end %>
											</div>
										</td>
										<td>
											<%= @AllLike.where(detail_id: detail.id).length %>
											<% if HasUser() %>
												<% if HasLike(detail.id) %>
													<% path = getSelfLink(@positive_page.to_s,@negative_page.to_s,@pos_order,@neg_order,@pos_show,@neg_show) %>
													<% path = path.gsub('?','!').gsub('&','|') %>
													<% link = detaillist_dislike_path + "?id=" + detail.id.to_s + "&path=" + path%>
													<%= link_to "收回讚",link,method: :post%>
												<% else %>
													<% if(i==0 && @NoMorePosLike) || (i == 1 && @NoMoreNegLike)%>
														<br>
														你已達到此議題的
														<% if i == 0 %>
															贊成方
														<% else %>
															反對方
														<% end %>
														按讚上限
													<% else %>
														<% path = getSelfLink(@positive_page.to_s,@negative_page.to_s,@pos_order,@neg_order,@pos_show,@neg_show) %>
														<% path = path.gsub('?','!').gsub('&','|') %>
														<% link = detaillist_like_path + "?id=" + detail.id.to_s + "&path=" + path%>
														<%= link_to "按讚",link,method: :post%>
													<% end %>
												<% end %>
											<% else %>
												<br>登入後才可按讚
											<% end %>
										</td>
										<td>
											<div><%= detail.created_at %></div>
											<div>
												<% link = userlist_index_path(id: user.id) %>
												<a href = <%= link %>>
													<%= user.nickname %>
												</a>
											</div>
										</td>
										<td>
											<% if current_user.nil? %>
												登入後方可檢舉
											<% else %>
												<% if @reports.where(detail_id: detail.id)[0].nil? %>
													<button type="button" class="btn btn-link ReportModal_Button" 
													data-toggle="modal" data-target="#ReportModal	" 
													issue_name="<%= @me.title %>" 
													post_name="<%= user.nickname %>" 
													content="<%= detail.content %>" 
													issue_id=	"<%= params[:issue_id] %>"  
													detail_id="<%= detail.id %>"
													>我要檢舉</button>
												<% else %>
													你已檢舉過了
												<% end %>
											<% end %>
											
										</td>
									</tr>
								<% else %>
								<% end %>
							<% end %>
							<!-- 換頁 -->
							<% Page_produce(i) %>
						</tbody>
					</table>
				</div>
			<% end %>
			
			<!-- reference issue && donwflow issue -->
			<div  align = "center">
				<table class = "col-md-offset-1 col-md-10">
					<td align="center" >
						<table class = "table table-bordered">
							<thead>
								<tr>
									<td>相關議題</td>	
								</tr>								
							</thead>
							<tbody>
								<tr>
									<% CreateReferenceIssueContent() %>
								</tr>
							</tbody>
						</table>
					</td>
					<td width="20px"></td>
					<td align="center">
						<table class = "table table-bordered">
							<thead>
								<tr>
									<td>下游議題</td>	
								</tr>								
							</thead>
							<tbody>
								<tr>
									<td>2</td>	
								</tr>
							</tbody>
						</table>
					</td>
					<td width="20px"></td>
					<td align="center">
						<table class = "table table-bordered">
							<thead>
								<tr>
									<td>相關議題樹</td>	
								</tr>								
							</thead>
							<tbody>
								<tr>
									<td>3</td>	
								</tr>
							</tbody>
						</table>
					</td>
				</table>
			</div>
		</div>
	</div>


<% end %>

