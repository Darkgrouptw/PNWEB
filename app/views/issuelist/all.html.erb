<link rel="stylesheet" type="text/css" href="/css/table.css">
<div class="BigTitle">
    <h2>所有根議題</h2>
    <hr>
</div>
<div align = "center" class = "whiteText">
	<div class = "col-md-offset-2 col-md-8 ">
		<table class = "table table-bordered">
			<thead>
				<tr align = "center">
					<td colspan = "3">所有根議題</td>
				</tr>
				<tr><td>標題</td><td>熱門度</td><td>創建時間</td></tr>
			</thead>
			<tbody>
				<% @issues.where(trunk_id: -1).each do |issue| %>
					<tr>
						<td>
							<% link = issuelist_index_path ( issue.id.to_s) %>
							<a href = <%= link %>>
								<%= issue.title %>
							</a>
						</td>
						<td></td>
						<td></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>