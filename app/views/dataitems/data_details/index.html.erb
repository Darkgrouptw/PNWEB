<div class = "container">
    <div class="jumbotron">
        <%= render :template => "/dataitems/top.html.erb" %>
        <div class="row">
            <div class = "col-md-12">
                <table class = "table table-hover">
                    <thead>
                        <tr>
                            <td class = "col-md-1">ID</td>
                            <td class = "col-md-2">論述</td>
                            <td class = "col-md-2">網址</td>
                            <td class = "col-md-2">備份圖片</td>
                            <td class = "col-md-1">點閱次數</td>
                            <td class = "col-md-1">編輯者	ID</td>
                            <td class = "col-md-1">名人  ID</td>
                            <td class = "col-md-2">操作</td>
				        </tr>
			         </thead>
			         <tbody>
				        <% @items.each do |item| %>
				        <tr>
				        	<td><%= item.id %></td>
				        	<td><%= item.content %></td>
                            <td><%= link_to "原始文章連結", item.link %></td>
                            <td>
                                <% if item.backup_id == 0 %>
                                    圖片正在存入當中，或沒有接收到
                                <% else %>
                                    <%= image_tag "/pagebackup/" + item.backup_id +  ".png", width: "200" %>
                                <% end %>
                            </td>
                            <td><%= item.count %></td>
                            <td><%= item.count_link %></td>
                            <td><%= item.count_dislike %></td>
                            <td><%= item.description %></td>
                            <td>
				        		<%= link_to "刪除", dataitems_data_person_path(item), class: "btn btn-sm btn-default", 
		                             method: :delete, data: { confirm: "確定刪除嗎?" } %>
				        	</td>
				        </tr>
				        <% end %>
			         </tbody>
                </table>
            </div>
        </div>
	</div>
</div>