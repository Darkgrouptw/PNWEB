<div class = "col-md-offset-1 col-md-10">
	<%= simple_form_for [:dataitems, @item] do |f| %>
		<div class = "form-group">
			<%= f.label "是否支持" %>
			<%= f.input_field :is_support %>
			<br>
			<%= f.label "內容" %>
			<%= f.input_field :text, class: "form-control" %>

			<%= f.label "原文網址" %>
			<%= f.input_field :link, class: "form-control" %>
		</div>
		<%= f.submit "儲存", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
	<% end %>
</div>