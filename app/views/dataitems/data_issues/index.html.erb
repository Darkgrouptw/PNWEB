<div class = "container">
    <div class="jumbotron">
        <%= render :template => "/dataitems/top.html.erb" %>
        <div class="row">
            <div class = "col-md-12">
                <table class = "table table-hover">
                    <thead>
                        <tr>
                            <td class = "col-md-1">ID</td>
                            <td class = "col-md-1">議題名稱</td>
                            <td class = "col-md-4">議題內容</td>
                            <td class = "col-md-1">候選</td>
                            <td class = "col-md-1">父議題的id</td>
                            <td class = "col-md-1">議題點閱次數</td>
                            <td class = "col-md-1">擁有的 Detail</td>
                            <td class = "col-md-2">操作按鈕</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% @items.each do |item| %>
                        <tr>
                            <td><%= item.id %></td>
                            <td><%= item.title %></td>
                            <td><%= item.post %></td>
                            <td><%= item.is_candidate %></td>
                            <td><%= item.trunk_id %></td>
                            <td><%= item.popularity %></td>
                            <td><%= item.datadetail_id %></td>
                            <td>
                                <%= link_to "修改", edit_dataitems_data_issue_path(item), class: "btn btn-sm btn-default"%>
                                <%= link_to "刪除", dataitems_data_issue_path(item), class: "btn btn-sm btn-default", 
                                       method: :delete, data: { confirm: "確定刪除嗎?" } %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>