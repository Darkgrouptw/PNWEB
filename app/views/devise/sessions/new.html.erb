<div class="jumbotron">
    <div class="container">
        <div class="rows">
            <div class="col-md-offset-4 col-md-4">
                <h2>登入頁面</h2>

                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="form-inputs">
                        <%= f.label "信箱 (必填)" %> <br>
                        <%= f.input_field :email, style: "width: 300px", required: false, autofocus: true %> <br>
                        
                        <%= f.label "密碼 (必填)" %> <br>
                        <%= f.input_field :password, style: "width: 300px", required: false %> <br>
                        
                        <%= f.input_field :remember_me, as: :boolean if devise_mapping.rememberable? %>
                        <%= f.label "記得我"%> <br>
                    </div>

                    <div class="form-actions">
                        <%= f.button :submit, "登入" %>
                    </div>
                <% end %>

                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
</div>
