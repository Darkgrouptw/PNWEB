<!DOCTYPE html>
<% 
def parseTree(treeS) 
    require 'json'
    data = JSON.parse(treeS)
    return data["item"]
end
%>
<% def runTree(tree,layer) %>   
    <div>

        <% for i in 0..layer %>
            <blockquote>
        <% end %>
        <% link = issuelist_index_path(id: tree["name"].to_s) %>
        <a href = <%= link %> target="_blank">
            <%= tree["name"].to_s %>
        </a>
        <% for i in 0..layer %>
            </blockquote>
        <% end %>
    </div>
    <% tree["parent"].each do |sub_tree|%>
            <% runTree(sub_tree,layer + 1) %>
    <% end %>
<% end %>
