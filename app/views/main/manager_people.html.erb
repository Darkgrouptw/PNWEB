		<% @titles.each do |title| %>
			<option value="<%= title %>">
				<%= title %>
			</option>
		<% end %>
	</select>
	<input type="submit" value="確定合併(無法復原)">
</form>

<div class="BigTitle">
	<h3>頭銜更名功能</h3>
	<h4>將頭銜更名，此步驟無法復原請小心使用。</h4>
</div>
<form action="<%= changePeopleTitle_path %>" method="post" align="center">
