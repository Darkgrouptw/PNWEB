<link rel="stylesheet" type="text/css" href="/css/table.css">
<div class="BigTitle">
    <h2>正反網頁</h2>
    <hr>
</div>
<!-- 所有 issue person 連結 -->
<div align = "center">
	<% link=issuelist_all_path %>
	<a href = <%= link %> class="whiteText">
		所有根議題
	</a>
	<% link=peoplelist_all_path %>
	<a href = <%= link %> class="whiteText">
		所有名人
	</a>
	<% if can_view(0) %>
		<% link=issuelist_candidate_path %>
		<a href = <%= link %> class="whiteText">
			所有候選議題
		</a>
	<% end %>
	<% link=userlist_all_path %>
	<a href = <%= link %> class="whiteText">
			所有使用者
	</a>
	
</div>
<!-- 左邊最新issue 右邊熱門detail -->
<div >
	<!-- newest issue -->
	<div class = "col-md-4 whiteText">
		<table class="table table-bordered">
			<thead>
				<tr align = "center">
					<td>最新議題</td>
				</tr>
			</thead>
			<tbody>
				<% time = 0 %>
				<% @issues.each do |issue| %>
					<% if time >= 10 %>
						<% break %>
					<% end %>
					<tr>
						<td>
							<% link="/Issuelist/"+issue.id.to_s%>
							<a href = <%= link %> >
							<%= issue.title %>
						</td>
					</tr>
					<% time = time + 1 %>
				<% end %>
				<% if time == 0 %>
					<tr><td>there is no issue</td></tr>
				<% end %>

			</tbody>
		</table>
	</div>
	<!-- hotest detail -->
	<div class = "col-md-offset-1 col-md-7 whiteText">
		<table class="table table-bordered">
			<thead>
				<tr align = "center">
					<td colspan = "2">熱門論述</td>
				</tr>
				<tr align = "center">
					<td>名嘴</td>
					<td>論述</td>
				</tr>
			</thead>
			<tbody>
				<% time = 0 %>
				<% @details.each do |detail| %>
					<% if time >= 10 %>
						<% break %>
					<% end %>
					<tr>
						<td>
							<% person =  @persons.where(id: detail.people_id)[0] %>
							<% if person.nil? %>
								無名氏
							<% else %>
								<% link=peoplelist_index_path(id: person.name ) %>
								<a href = <%= link %> >
									<%= person.name %>
								</a>
							<% end %>
						</td>
						<td>
							<% link="/Detaillist/"+detail.id.to_s%>
							<a href = <%= link %> >
								<% if detail.content.length > 30 %>
									<%= 'click for more' %>
								<% else %>
									<%= detail.content %>
								<% end %>
							</a>
						</td>
					</tr>
					<% time = time + 1 %>
				<% end %>
				<% if time == 0 %>
					<tr><td>there is no person</td><td>there is no detail</td></tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>