	<% end %>
<% end %>
<% def CreateMostBalenceMediaContent(maxContentNumber) %>
	<% @BalanceMedia.each do |item|%>
		<% link = media_index_path(id: item.name) %>
		<tr><td><a href=<%= link %>><%= item.name %></a></td></tr>
	<% end %>
<% end %>
<% def CreateNearHotIssueTable() %>
	<table class="table table-bordered">
		<thead>
			<tr><td>近期熱門議題</td></tr>
		</thead>
		<tbody>
			<% CreateNearHotIssueContent(1) %>
		</tbody>
	</table>
<% end %>
<% def CreateHotIssueTreeTable() %>
	<table class="table table-bordered">
		<thead>
			<tr><td>近期熱門議題樹</td></tr>
		</thead>
		<tbody>
			<% CreateHotIssueTreeContent(2) %>
		</tbody>
	</table>
<% end %>
<% def CreateHotPeopleTable() %>
	<table class="table table-bordered">
		<thead>
			<tr><td> 近期熱門名人</td></tr>
		</thead>
		<tbody>
			<% CreateHotPeopleContent(3) %>
		</tbody>
	</table>
<% end %>
<% def CreateMostInfluencePeopleTable() %>
	<table class="table table-bordered">
		<thead>
			<tr><td>最有影響力的名人</td></tr>	
		</thead>
		<tbody>
			<% CreateMostInfluencePeopleContent(4) %>
		</tbody>
	</table>
<% end %>
<% def CreateMostInfluenceMediaTable() %>
	<table class="table table-bordered">
		<thead>
			<tr><td>媒體影響力排名</td></tr>	
		</thead>
		<tbody>
			<% CreateMostInfluenceMediaContent(5) %>
		</tbody>
	</table>
<% end %>
<% def CreateMostBalenceMediaTable() %>
	<table class="table table-bordered">
		<thead>
			<tr><td>媒體平衡報導得分排名</td></tr>	
		</thead>
		<tbody>
			<% CreateMostBalenceMediaContent(6) %>
		</tbody>
	</table>
<% end %>

