<% def CreateNearHotIssueContent(maxContentNumber) %>
	<% @NearHotIssue.each do |item|%>
		<% link = issuelist_index_path(id: item.id) %>
		<tr><td><a href=<%= link %>><%= item.title %></a></td></tr>
	<% end %>
<% end %>
<% def CreateHotIssueTreeContent(maxContentNumber) %>
	<tr><td><%= maxContentNumber + 1%></td></tr>
<% end %>
<% def CreateHotPeopleContent(maxContentNumber) %>
	<% @NearHotPeople.each do |item|%>
		<% link = peoplelist_index_path(id: item.name) %>
		<tr><td><a href=<%= link %>><%= item.name %></a></td></tr>
	<% end %>
<% end %>
<% def CreateMostInfluencePeopleContent(maxContentNumber) %>
	<% @influencePeople.each do |item|%>
		<% link = peoplelist_index_path(id: item.name) %>
		<tr><td><a href=<%= link %>><%= item.name %></a></td></tr>
	<% end %>
<% end %>
<% def CreateMostInfluenceMediaContent(maxContentNumber) %>
	<% @InfluenceMedia.each do |item|%>
		<% link = media_index_path(id: item.name) %>
