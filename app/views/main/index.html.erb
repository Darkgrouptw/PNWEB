<% def CreateNearHotIssueContent(maxContentNumber) %>
	<% @NearHotIssue.each do |item|%>
		<% link = issuelist_index_path(id: item.id) %>
		<tr><td><a href=<%= link %>><%= item.title %></a></td></tr>
	<% end %>
<% end %>
<% def CreateHotIssueTreeContent(maxContentNumber) %>
	<% @NearHotIssueTree.each do |item|%>
		<% link = "/TreeIndex?OrderBy=1&search=" + @issues.where(id: item.issue_id)[0].title %>
		<tr><td><a href=<%= link %>><%= @issues.where(id: item.issue_id)[0].title %></a></td></tr>
	<% end %>
<% end %>
