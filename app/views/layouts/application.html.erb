<% if !request.original_url.include?("MediaName") && !request.original_url.include?("PeopleName") && !request.original_url.include?("IssueName") && !request.original_url.include?("IssueID") && !request.original_url.include?("tree_check") && !request.original_url.include?("TreeCanvas") && !request.original_url.include?("TreeJson") && !request.original_url.include?("TreeSaveAllNode") && !request.original_url.include?("TreeDeleteAllNode")%>
    <!DOCTYPE html>
    <html>
    <head>
        <title>PNWEB</title>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>

        <!-- For moblie --> 
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

        <link rel="stylesheet" type="text/css" href="/css/navbar.css">

        
        
        <meta property="og:title"         content=<%= yield(:title) %> />
        <meta property="og:description"   content=<%= yield(:description) %> />
        <meta property="og:type"          content="website" />
        <meta property="og:url"           content=<%= yield(:url)%>/>
        <meta property="og:image"         content="http://npweb.herokuapp.com/blanceLogoTrans.png"/>
        <meta property="fb:app_id"        content="1175473039193082"/> 
        
        
    </head>
    <body>

        <%= render "common/navbar" %>
        <!-- 給 notice_message 使用 -->
        <div class = "container-fluid" style="position: relative; padding-top: 100px;">
            <%= notice_message %>
        </div>
        <%= yield %>

        <%= render "common/footer" %>
    </body>
    </html>
<% else %>
    <%= yield %>
<% end %>