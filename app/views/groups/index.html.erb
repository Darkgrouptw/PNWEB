<%= stylesheet_link_tag "index.css" %>
<%= javascript_include_tag "indexMove.js" %>

<div class = "jumbotron">
  <div class = "container-fluid">
    <div style = "margin: 0px auto;" class = "showbox">
      <div class = "imagebox">
        <img src = "http://www.itxueyuan.org/uploads/javascript/demo/lunbo/zuoyou_title/images/1.jpg" alt = "1">
        <img src = "http://www.itxueyuan.org/uploads/javascript/demo/lunbo/zuoyou_title/images/2.jpg" alt = "2">
        <img src = "http://www.itxueyuan.org/uploads/javascript/demo/lunbo/zuoyou_title/images/3.jpg" alt = "3">
        <img src = "http://www.itxueyuan.org/uploads/javascript/demo/lunbo/zuoyou_title/images/4.jpg" alt = "4">
      </div>
      <div class = "iconbox">
        <span rel = "0" class = "active">0</span>
        <span rel = "1">1</span>
        <span rel = "2">2</span>
        <span rel = "3">3</span>
      </div>
    </div>
  </div>
</div>
<div class = "row">
  <div class = "col-md-offset-3 col-md-6">
    <table class = "table table-bordered">
      <thead>
        <tr>
          <td>最新議題</td>
          <td>名人語錄</td>
        </tr>
      </thead>
      <tbody>
        <% count = 0 %>
        <% last_str = '' %>
        <% @items.each do |item| %>
          <% if last_str != item.title %>
            <% last_str = item.title %>
            <tr>
              <td><%= link_to(item.title,issue_path(title: item.title)) %></td>
              <td style = "width:300px">
                <% if count == 0 %>
                  <%= link_to(image_tag("http://img.epochtimes.com/i6/911060221481470.jpg", width: '256'), peoplelist_path(people: "吳敦義")) %>
                <% else %>
                  <%= link_to(image_tag("http://donate.iing.tw/daebyday/images/iing.png", width: '256'), peoplelist_path(people:"蔡英文"))%>
                <% end %>
              </td>
            </tr>
            <% count+=1 %>
            <% if count >= 5 %>
              <% break %>
            <% end %>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
