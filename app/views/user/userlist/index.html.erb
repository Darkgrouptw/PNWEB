<div class="BigTitle">
	<h2>網友頁面</h2>
	<hr>
</div>
<% if @me == nil %>
	<div class = "whiteText">
		錯誤的連結位置
	</div>
<% else %>
	<!-- the description with @me -->
	<div class = "whiteText row">
		
		<div class = "col-md-offset-2 col-md-8 row">
			<table class = "table table-bordered">
				<thead>
					<tr align = "center" ><td colspan = "2"><%= @me.nickname %></td></tr>
				</thead>
				<tbody>
					<tr>
						<td class = "col-md-3">
							<% if true %>
								<%= image_tag 'http://i.imgur.com/TbBAqpV.png', width: "200" %>
							<% end %>
						</td>  
						<td class = "col-md-5"><%= @me.nickname %></td> 
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<!-- tables with all the detail -->
	<div class = "whiteText row">
		<div align = "center"><%= @me.nickname %> 上線的論述 </div>
		<div class = "col-md-offset-2 col-md-8 row">
			<table class = "table table-bordered">
				<thead>
					<tr align = "center" >
						<td>議題</td>
						<td>論述</td>
						<td>正反方</td>
					</tr>
				</thead>
				<tbody>
					<% @details.each do |detail| %>
						<% issue = @issues.where(id: detail.issue_id)[0] %>
						<% if issue.nil? %>
						<% else %>
							<tr>
								<td>
									<% link = issuelist_index_path(id: issue.id) %>
									<a href = <%= link %>>
										<%= issue.title %>
									</a>
								</td>
								<td>
									<% link = detaillist_index_path(id: detail.id) %>
									<a href = <%= link %>>
										<%= detail.content %>
									</a>
								</td>
								<td>
									<% if detail.is_support %>
										正
									<% else %>
										反
									<% end %>
								</td>
							</tr>
						<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
<% end %>