<% if @me.nil? %>
	<div class = "whiteText">
		error,invalid parameter
	</div>
<% else %>
	<!-- show detail data-->
	<div class = "whiteText row">
		<div class = "col-md-offset-1 col-md-10 row">
			<table class = "table table-bordered">
				<thead>
					<tr align = "center" >
						<td>Issue</td>
						<td>Person</td>
						<td>IsSupport</td>
						<td>IdDirect</td>
						<td>Content</td>
						<td>Media</td>
						<td>Reported Time</td>
						<td>Poster</td>
						<td>PostedTime</td>
						<td>LikeNumber</td>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							<% link = issuelist_index_path(id: @issue.id) %>
							<a href = <%= link %>>
								<%= @issue.title %>
							</a>
						</td>
						<td>
							<% link = peoplelist_index_path(id: @person.name) %>
							<a href = <%= link %>>
								<%= @person.name %>
							</a>
						</td>
						<td>
							<% if @me.is_report %>
								Support
							<% else %>
								DisSupport
							<% end %>
						</td>
						<td>
							<% if @me.is_direct %>
								Direct
							<% else %>
								NonDirect
							<% end %>
						</td>
						<td><%= @me.content %></td>
						<td><%= @me.news_media %></td>
						<td><%= @me.report_at %></td>
						<td>
							<% link = userlist_index_path(id: @user.id) %>
							<a href = <%= link %>>
								<%= @user.nickname %>
							</a>
						</td>
						<td><%= @me.created_at %></td>
						<td><%= @me.like_list_id.split(',').length %></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
<% end %>