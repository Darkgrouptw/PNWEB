<div class="BigTitle">
	<h2>論述頁面</h2>
	<hr>
</div>
<% if @me.nil? %>
	<div class = "whiteText">
		error,invalid parameter index
	</div>
<% else %>
	<!-- show detail data-->
	<div class = "whiteText row">
		<div class = "col-md-offset-1 col-md-10 row">
			<div align = "right">
				<% link = detaillist_edit_path(id: @tags) %>
				<a href = "<%= link %>">編輯</a>
				<% link = reportlist_add_path(id: @tags) %>
				<a href = "<%= link %>">檢舉</a>
			</div>
			<table class = "table table-bordered">
				<thead>
					<tr align = "center" >
						<td>Issue</td>
						<td>Person</td>
						<td>IsSupport</td>
						<td>IsDirect</td>
						<td>Content</td>
						<td>Media</td>
						<td>Reported Time</td>
						<td>Poster</td>
						<td>PostedTime</td>
						<td>LikeNumber</td>
						<td>link</td>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							<% link = issuelist_index_path(id: @issue.id) %>
							<a href = <%= link %>>
								<%= @issue.title %>
							</a>
						</td>
						<td>
							<% if @person.nil? %>
								無名
							<% else %>
								<% link = peoplelist_index_path(id: @person.name) %>
								<a href = <%= link %>>
									<%= @person.name %>
								</a>
							<% end %>
						</td>
						<td>
							<% if @me.is_support %>
								Support
							<% else %>
								DisSupport
							<% end %>
						</td>
						<td>
							<% if @me.is_direct %>
								Direct
							<% else %>
								NonDirect
							<% end %>
						</td>
						<td><%= @me.content %></td>
						<td><%= @me.news_media %></td>
						<td><%= @me.report_at %></td>
						<td>
							<% link = userlist_index_path(id: @user.id) %>
							<a href = <%= link %>>
								<%= @user.nickname %>
							</a>
						</td>
						<td><%= @me.created_at %></td>
						<td><%= @me.like_list_id.split(',').length %></td>
						<td><% link = "//"+ @me.link %><a href = <%= link %>><%= @me.link %></a></td>
					</tr>
				</tbody>
			</table>
			<table class = "table table-bordered">
				<thead>
					<tr align = "center" >
						<td>User</td>
						<td>Comment</td>
					</tr>
				</thead>
				<tbody>
					<% @comments.each do |item| %>
						<% user = @users.where(id: item.post_id)[0] %>
						<tr>
							<td>
								<% link = userlist_index_path(id: user.id) %>
								<a href = <%= link %>>
									<%= user.nickname %>
								</a>
							</td>
							<td>
								<%= item.content %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<div >
				<div align = "center" >我有話說</div>
				<form action= "<%= detaillist_comment_new_path %> " method= "post">
					<div class = "form-group">
						<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
						<input type="hidden" name="detail_id" value="<%= @me.id %>">
						<label>Comment</label>
						<textarea class="form-control" name="content" cols = "50" rows="5"></textarea>
						<div>
							<input type = "submit" class = "btn btn-primary" style = "width: 150px;">
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
<% end %>